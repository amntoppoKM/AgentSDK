<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginEnd="19dp"
    android:layout_marginRight="19dp"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/km_navigation_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:scaleType="center"
        android:layout_marginLeft="8dp"
        app:srcCompat="@drawable/km_ic_action_camera_new"
        />

    <TextView
        android:id="@+id/km_navigation_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/km_navigation_item_icon"
        android:layout_toEndOf="@+id/km_navigation_item_icon"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="5.8sp"
        android:text=""
        android:textColor="@color/km_nav_item_text_color"
        android:textSize="15sp"
        android:textStyle="normal" />

    <View
        android:id="@+id/km_navigation_item_dot"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/km_record_circle" />
</RelativeLayout>
